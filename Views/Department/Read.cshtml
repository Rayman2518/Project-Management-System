@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Manage Departments";
}

<section style="width:100%; height:100%; display:grid; grid-template-rows:15% 5% 80%;">

    <!-- Navigation and Title Sections -->
    <div style="display:flex; align-items:center; justify-content:center;">
        <nav style="width: 95%; height: 60%; background-color: white; border-radius: 5px; display: flex; align-items: center;">
            <a href="@Url.Action("Create", "Department")" style="margin-left: 3%; height: 60%; width: 10%; display: flex; align-items: center; justify-content: center; border-radius: 5px; cursor: pointer; color:black;">Add Department</a>
        </nav>
    </div>

    <h2 style="margin-left:2.5%;">Manage Departments</h2>

    <!-- Table Section -->
    <div style="display:flex; align-items:center; justify-content:center;">
        <section style="width: 95%; height: 98%; background-color: white; border-radius: 5px; overflow-y:scroll;">

            <table id="departmentTable" style="border-collapse: collapse; width: 100%; font-family: Arial, sans-serif;">
                <thead>
                    <tr>
                        <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">No.</th>
                        <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Department Name</th>
                        <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Location</th>
                        <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Annual Budget</th>
                        <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Operation</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int counter = 1;
                    }
                    @foreach (var department in Model)
                    {
                        <tr>
                            <td style="border: 1px solid #ddd; padding: 8px;">@counter</td>
                            <td style="border: 1px solid #ddd; padding: 8px;">@department.DepName</td>
                            <td style="border: 1px solid #ddd; padding: 8px;">@department.DepLocation</td>
                            <td style="border: 1px solid #ddd; padding: 8px;">@department.DepAnnualBudget</td>
                            <td style="border: 1px solid #ddd; padding: 8px;">
                                <a href="@Url.Action("Update", "Department", new { id = department.DepId })" style="color: #007bff; text-decoration: none;">Update</a> |
                                <a href="@Url.Action("Delete", "Department", new { id = department.DepId })" style="color: #dc3545; text-decoration: none;">Delete</a>
                            </td>
                        </tr>
                    }
                    @{ counter++; }
                </tbody>
            </table>

        </section>
    </div>
</section>
