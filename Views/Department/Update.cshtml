@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Edit Department";
}

<div style="display: flex;justify-content:center; align-items:center; background-color: #f7f5f7; padding: 20px; width: 100%; height: 100%; margin: 0 auto;">
    @using (Html.BeginForm("Update", "Department", FormMethod.Post, new { @style = "border-radius:5px; display: flex; flex-direction: column; justify-content:center; gap: 16px; background-color: white; padding: 20px; width:70%; height:60%" }))
    {
        @Html.AntiForgeryToken()

            <input type="hidden" name="depId" value="@Model.DepId" />

            <div style="display: flex; flex-direction: column; height:20%;">
                <label for="depName" style="margin-bottom: 4px; font-size: 14px;">Department Name</label>
                <input type="text" id="depName" name="depName" value="@Model.DepName" required style="padding: 8px; border-radius: 4px; border: 1px solid #ccc; height: 70%;">
            </div>
            <div style="display: flex; flex-direction: column; height: 20%;">
                <label for="depLocation" style="margin-bottom: 4px; font-size: 14px;">Location</label>
                <input type="text" id="depLocation" name="depLocation" value="@Model.DepLocation" required style="padding: 8px; border-radius: 4px; border: 1px solid #ccc; height: 70%;">
            </div>
            <div style="display: flex; flex-direction: column; height: 20%;">
                <label for="depAnnualBudget" style="margin-bottom: 4px; font-size: 14px;">Annual Budget</label>
                <input type="number" id="depAnnualBudget" name="depAnnualBudget" value="@Model.DepAnnualBudget" required style="padding: 8px; border-radius: 4px; border: 1px solid #ccc; height: 70%;">
            </div>
            <div style="display: flex; justify-content: center; height: 10%;">
                <button type="submit" style="background-color: #333333; color: white; padding: 10px 20px; border-radius: 4px; border: none; cursor: pointer; font-size: 16px;">Update Department</button>
            </div>
    }
</div>
