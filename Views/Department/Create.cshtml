@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Add Department";
}

<section style="width:100%; height:100%; display:grid; grid-template-rows:15% 5% 80%;">
    <div style="display:flex; align-items:center; justify-content:center;">
        <nav style="width: 95%; height: 60%; background-color: white; border-radius: 5px; display: flex; align-items: center;">
            <a href="@Url.Action("Read", "Department")" style="margin-left: 3%; height: 60%; width: 10%; display: flex; align-items: center; justify-content: center; border-radius: 5px; cursor: pointer; color:black;">All Departments</a>
        </nav>
    </div>

    <h2 style="margin-left:2.5%;">Add a new department</h2>

    <div style="display:flex; align-items:center; justify-content:center;">
        <section style="width: 95%; height: 98%; background-color: white; border-radius: 5px; overflow-y:scroll;">
            <h4 style="margin-left: 2.5%; margin-top: 2.5%;" id="sub-title">Department details</h4>
            <hr style="margin-left: 2.5%; margin-right: 2.5%;" />

            @using (Html.BeginForm("Create", "Department", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; padding:2.5%;">
                    <div style="display: flex; flex-direction: column; margin-bottom: 15px;">
                        <label for="depName" style="margin-bottom: 5px;">Department Name</label>
                        <input type="text" id="depName" name="depName" style="padding: 8px; border: 1px solid #ddd; border-radius: 4px; font-size: 16px;" required />
                    </div>
                    <div style="display: flex; flex-direction: column; margin-bottom: 15px;">
                        <label for="depLocation" style="margin-bottom: 5px;">Location</label>
                        <input type="text" id="depLocation" name="depLocation" required style="padding: 8px; border: 1px solid #ddd; border-radius: 4px; font-size: 16px;">
                    </div>
                    <div style="display: flex; flex-direction: column; margin-bottom: 15px;">
                        <label for="depAnnualBudget" style="margin-bottom: 5px;">Annual Budget</label>
                        <input type="number" id="depAnnualBudget" name="depAnnualBudget" required style="padding: 8px; border: 1px solid #ddd; border-radius: 4px; font-size: 16px;">
                    </div>

                    <div style="grid-column: 1 / -1; display: flex; justify-content: center; margin-top: 20px;">
                        <button type="submit" style="background-color: #333; color: white; padding: 10px 40px; border: none; border-radius: 6px; font-size: 16px; cursor: pointer;">Add</button>
                    </div>
                </div>
            }
        </section>
    </div>
</section>
