@{
    ViewBag.Title = "Team Member Dashboard";
}

<style>

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html, body {
        height: 100vh;
        width: 100vw;
        background-color: #f7f5f7;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .nav-item {
        display: flex;
        align-items: center;
        justify-content: space-evenly;
        height: 40px; /* Reduced height */
        padding: 8px 0; /* Reduced padding for a more compact link */
        width: 90%;
        margin-bottom: 10px;
        border-radius: 5px;
        transition: background-color 0.3s;
        cursor: pointer;
        text-decoration: none; /* Remove underline */
        color: inherit; /* Inherit text color */
    }

        .nav-item:hover {
            background-color: #f7f5f7;
        }

        /* Styling the <a> tag to remove default styles */
        .nav-item a {
            text-decoration: none; /* Ensure no underline */
            color: inherit; /* Inherit color */
            width: 100%; /* Make sure it covers the whole area */
            height: 100%; /* Ensure the height is consistent */
            display: flex; /* Align the content properly */
            align-items: center; /* Vertically center the content */
            justify-content: space-evenly; /* Horizontally center the content */
        }

    /* The logout item styling */
    .logout {
        display: flex;
        align-items: center;
        justify-content: space-evenly;
        height: 50px;
        width: 90%;
        margin-bottom: 10px;
        border-radius: 5px;
        transition: background-color 0.3s;
        cursor: pointer;
    }

        .logout:hover {
            background-color: #f7f5f7;
        }
</style>

<section style="display: grid; grid-template-columns: 15% 85%; height: 100%; width: 100%;">
    <nav style="background-color: #ffffff; height: 100%; display: flex; flex-direction: column;">
        <div id="main-navbar-options" style="height: 80%; display: flex; flex-direction: column; justify-content: center; align-items: center;">
            <a href="@Url.Action("Projects", "TeamMember")" class="nav-item">
                <img src="https://cdn-icons-png.flaticon.com/128/1383/1383970.png" style="width: 24px; height: 24px;" />
                <h3>Projects</h3>
            </a>
            <a href="@Url.Action("Teams", "TeamMember")" class="nav-item">
                <img src="https://cdn-icons-png.flaticon.com/128/3131/3131333.png" style="width: 24px; height: 24px;" />
                <h3>Teams</h3>
            </a>
            <a href="@Url.Action("Tasks", "TeamMember")" class="nav-item">
                <img src="https://cdn-icons-png.flaticon.com/128/1368/1368593.png" style="width: 24px; height: 24px;" />
                <h3>Tasks</h3>
            </a>
            <a href="@Url.Action("ProfileManagement", "TeamMember")" class="nav-item">
                <img src="https://cdn-icons-png.flaticon.com/128/456/456283.png" style="width: 24px; height: 24px;" />
                <h3>Profile</h3>
            </a>
        </div>

        <div id="logout-div" style="height: 20%; display: flex; justify-content: center; align-items: center;">
            <div class="logout">
                <a href="@Url.Action("Logout", "Authentication")" style="display: flex; align-items: center; justify-content: space-evenly; text-decoration: none; color: inherit; width: 100%; height: 100%;">
                    <img src="https://cdn-icons-png.flaticon.com/128/2529/2529508.png" style="width: 24px; height: 24px;" />
                    <h3>Logout</h3>
                </a>
            </div>
        </div>
    </nav>
    <div id="content" style="background-color: #f7f5f7; height: 100%; display: flex; flex-direction: column; justify-content: center; align-items: center;">
        @RenderBody()
    </div>
</section>
